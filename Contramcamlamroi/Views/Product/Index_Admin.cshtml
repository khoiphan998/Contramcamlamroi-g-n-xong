@model IEnumerable<Contramcamlamroi.Models.Product>

@{
    ViewBag.Title = "Index_Admin";
    Layout = "~/Views/Shared/ViewPage1.cshtml";
}
<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
         vertical-align: middle; 
        border-top: 1px solid #ddd;
        text-align: center;
    }
</style>
<h1 style="padding:10px;">DANH MỤC SẢN PHẨM</h1>
<p style="padding:10px; font-size:20px;">
    @Html.ActionLink("Thêm sản phẩm mới", "Create", "Product")
</p>
<table class="table table-bordered" style="border-width: thick;  margin-left: 10px; margin-right: 10px; font-size:17px">
    <tr>
        <th> Tên Sản phẩm </th>
        <th> Mô tả </th>
        <th> Đơn giá </th>
        <th> Hình </th>
        <th> Loại Sản phẩm </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td> @Html.DisplayFor(modelItem => item.NamePro) </td>
    <td> @Html.DisplayFor(modelItem => item.DecriptionPro) </td>
    <td> @Html.DisplayFor(modelItem => item.Price) </td>
    <td><img src="@Url.Content(item.ImagePro)" height="150" width="150" /></td>
    <td> @Html.DisplayFor(modelItem => item.Category1.NameCate) </td>
    <td style="padding-right:70px;text-align:center;">
        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
    </td>
</tr>
    }
</table>

