@model Contramcamlamroi.Models.Product

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-pro:hover {
        transition: transform .2s;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .carousel-cell {
        counter-increment: gallery-cell;
    }

    .flickity-page-dots {
        opacity: 0;
    }

    .flickity-prev-next-button.next {
        right: -5%;
    }

        .flickity-prev-next-button.next:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

    .flickity-prev-next-button.previous {
        left: -5%;
    }

        .flickity-prev-next-button.previous:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

    .hbtn {
        position: relative;
        box-sizing: border-box;
        display: inline-block;
        overflow: hidden;
        padding: 8px 20px;
        margin: 0px 3px 6px;
        text-align: center;
        border: 2px solid rgb(255, 255, 255);
        text-decoration: none;
        color: black;
        white-space: nowrap;
        z-index: 0;
        border: 1px solid #BFBFBF;
        border-radius: 10px;
    }


        .hbtn i {
            padding-right: 8px;
        }


    .hb-fill-right-bg::before {
        position: absolute;
        content: "";
        background: limegreen;
        transition-duration: 0.3s;
        z-index: -1;
        inset: 0px auto auto 0px;
        width: 0px;
        height: 100%;
        opacity: 1;
        text-decoration: none;
        font-weight: 700;
        border-radius: 10px;
    }


    .hb-fill-right-bg:hover::before {
        width: 100%;
        height: 100%;
        opacity: 1;
    }


    .hb-fill-right-bg:hover {
        color: rgb(0, 0, 0);
        background: white;
        transition: all 0.3s ease 0s;
        text-decoration: none;
        font-weight: 500;
        border-radius: 10px;
    }

    .product-img:hover {
        -ms-transform: scale(1.1); /* IE 9 */
        -webkit-transform: scale(1.1); /* Safari 3-8 */
        transform: scale(1.1);
    }

    .product-text a:hover {
        color: green;
    }
</style>
<div style="margin-top:10%;">
    <div class="container" style="margin-top:10%;margin-left:160px">
        <div class="col-md-6" style="margin-left: -100px;">

            <img src="@Url.Content(Model.ImagePro)" style="width:600px; margin-left:-45px" />
        </div>
        <div class="col-md-4" style="margin-top: -10px; font-size: 30px; left: 100px;">
            @*<p> @Html.DisplayFor(model => model.NamePro)</p> <br />*@
            <p style="font-size: 30px; margin-left: -40px;"> @Html.DisplayFor(model => model.NamePro)</p>
            <p style="color: red; font-family: cursive; margin-left: -50px;">  @Html.DisplayFor(model => model.Price)0 đ</p>
            <div>
                <h3> Thông Tin Sản Phẩm </h3><hr />
                <p style="font-size:16px;">
                    @Html.DisplayFor(model => model.DecriptionPro)
                </p>
            </div>

            <p class="btn btn-success" style="margin-top: 2%; height: 60px; background-color: palegreen"> 
            <a href="/ShoppingCart/AddToCart/ @Model.ProductID" class="btn btn-defaul" style="text-align: center; 
font-size: 20px; ">Mua Ngay</a></p>


        </div>
    </div>


</div>
@{Html.RenderAction("Index", "Product");}




