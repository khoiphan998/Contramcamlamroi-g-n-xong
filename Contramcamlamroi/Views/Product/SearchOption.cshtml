@model IEnumerable<Contramcamlamroi.Models.Product>
@{ ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .card-pro:hover {
        transition: transform .2s;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .carousel-cell {
        counter-increment: gallery-cell;
    }

    .flickity-page-dots {
        opacity: 0;
    }

    .flickity-prev-next-button.next {
        right: -5%;
    }

        .flickity-prev-next-button.next:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

    .flickity-prev-next-button.previous {
        left: -5%;
    }

        .flickity-prev-next-button.previous:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

    .hbtn {
        position: relative;
        box-sizing: border-box;
        display: inline-block;
        overflow: hidden;
        padding: 8px 20px;
        margin: 0px 3px 6px;
        text-align: center;
        border: 2px solid rgb(255, 255, 255);
        text-decoration: none;
        color: black;
        white-space: nowrap;
        z-index: 0;
        border: 1px solid #BFBFBF;
        border-radius: 10px;
    }


        .hbtn i {
            padding-right: 8px;
        }


    .hb-fill-right-bg::before {
        position: absolute;
        content: "";
        background: limegreen;
        transition-duration: 0.3s;
        z-index: -1;
        inset: 0px auto auto 0px;
        width: 0px;
        height: 100%;
        opacity: 1;
        text-decoration: none;
        font-weight: 700;
        border-radius: 10px;
    }


    .hb-fill-right-bg:hover::before {
        width: 100%;
        height: 100%;
        opacity: 1;
    }


    .hb-fill-right-bg:hover {
        color: rgb(0, 0, 0);
        background: white;
        transition: all 0.3s ease 0s;
        text-decoration: none;
        font-weight: 500;
        border-radius: 10px;
    }

    .product-img:hover {
        -ms-transform: scale(1.1); /* IE 9 */
        -webkit-transform: scale(1.1); /* Safari 3-8 */
        transform: scale(1.1);
    }

    .product-text a:hover {
        color: green;
    }
</style>



<h2 style="text-align: center; font-size: 25px; color: green; font-weight: 700; ">Sản Phẩm</h2>
<hr class="w3-border-gray w3-animate-left" style="margin:auto;width:65%">
<div class="container">

    @using (Html.BeginForm("SearchOption", "Product"))
    {

<div class="row carousel" data-flickity='{ "groupCells": true }'>
    @foreach (var pro in Model)
    {
        <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3  carousel-cell" style="border-width:thick;">

            <div class="card-pro .w3-card">
                @*@ <p> @Html.DisplayFor(model => pro.ProductID)</p>*@
                <a href="/Product/ProductList/ @pro.ProductID"><img src="@Url.Content(pro.ImagePro)" height="200" width="200" /></a>
                <p style="text-align: center; font-size: 20px; font-weight: 600">@Html.DisplayFor(model => pro.NamePro)</p>
                <p style="font-weight:600;">@Html.DisplayFor(model => pro.Price)0 VNĐ</p>
                <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="hbtn hb-fill-right-bg">Mua</a>
            </div>


        </div>}
    
</div>}
</div>

