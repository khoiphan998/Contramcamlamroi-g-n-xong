@model Contramcamlamroi.Models.Category
@{
    Layout = "~/Views/Shared/ViewPage1.cshtml";
}
<h2>Xóa loại sản phẩm</h2>

<h3>Bạn có chắc muốn xóa loại sản phẩm này chứ ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDCate)
        </dd>

        <dt>
            Tên loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>